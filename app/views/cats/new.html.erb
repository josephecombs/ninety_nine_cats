<form action="http://http://localhost:3000/cats" method="post">
  <label for="cat_name">Cat name</label>
  <input type="text" name="cat[name]" id="cat_name">
  <br>
  <label for="cat_age">Cat age</label>
  <input type="text" name="cat[age]" id="cat_age">
  <br>
  <label for="cat_color">color</label>
  <select name="cat[color]" id="cat_color", default>
    <option value=""> </option>
    <option value ='black'>Black</option>
    <option value ='white'>White</option>
    <option value ='orange'>Orange</option>
    <option value ='grey'>Grey</option>
  </select>
  <br>
  <label for="cat_sex">Cat sex</label>
    <input type="radio" name="cat[sex]" id="cat_sex_female" value="F">
    <label for="cat_sex_female">Female</label>
    <input type="radio" name="cat[sex]" id="cat_sex_male" value="M">
    <label for="cat_sex_male">Male</label>
  <br>
  <label for="cat_birth_date">Birth date</label>
  <input type="date" name=cat[birth_date] id ="cat_birth_date">
  

  <input type="submit" value="Create cat">
</form>