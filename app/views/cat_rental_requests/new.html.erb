
<form action="http://localhost:3000/cat_rental_requests" method="POST">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">
      
  <label for="cat_id">cat</label>
  
  <select name="cat_rental_request[cat_id]" id="cat_color", default>
    
    <option value=''> </option>
    <% Cat.all.each do |cat| %>
      <option value ="<%= cat.id %>" ><%= cat.name %></option>
    <% end  %>
  </select>
  <br>
  
  <label for="rental_start_date">Start Date:</label>
  <input type="date" name=cat_rental_request[start_date] id ="rental_start_date" value=<%= @cat_rental_request.start_date %>>
  <br>
  <label for="rental_end_date">End Date:</label>
  <input type="date" name=cat_rental_request[end_date] id ="rental_end_date" value=<%= @cat_rental_request.end_date %>> 
  <br>
  
  <input type="submit" value="Create Request!">
  
</form>